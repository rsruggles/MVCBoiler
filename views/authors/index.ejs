<h5>Search Authors</h5>
<div class="border rounded p-4 mb-5 shadow-sm">
  <form action="/authors" method="GET">
    <div class="row align-items-center">
      <div class="col-12 col-md-6 col-lg-9">
        <div class="form-group">
          <label>Name:</label>
          <input type="text" class="form-control" name="name" value="<%= searchOptions.name %>">
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <button class="btn btn-primary btn-block" type="submit">Search</button>
      </div>
    </div>
  </form>
</div>
<% authors.forEach(author => { %>
<div class="border rounded bg-white d-flex flex-row align-items-center justify-content-between p-3 mb-2 hover-shadow">
  <div class="d-flex flex-column align-items-start justify-content-start">
  	<div class="font-weight-bold mb-2">
			  <%= author.name %>
		</div>
    <div class="d-flex flex-row align-items-center justify-content-start">
			<a href="/authors/<%= author.id %>">View</a><span class="px-3 text-light small">|</span>
	    <a href="/authors/<%= author.id %>/edit">Edit</a>
		</div>
  </div>
  <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %>
</div>
<% }) %>
